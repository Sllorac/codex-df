{
  "functions": {
    "app/layout.tsx": {
      "includeFiles": "public/**"
    }
  },
  "headers": [
    {
      "source": "/sounds/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, HEAD, OPTIONS"
        },
        {
          "key": "Content-Type",
          "value": "audio/mpeg"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/(.*\\.(mp3|wav|ogg))",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Content-Type",
          "value": "audio/mpeg"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/sounds/(.*)",
      "destination": "/sounds/$1"
    }
  ]
}
